.welcomeBar
  text-align center
  padding 20px
  margin 0 auto 10px
  background #fff
  display table
  list-style-type none
  width 100%
  min-width 700px
  box-shadow 0 1px 2px rgba(0,0,0,0.1)
  transition background $time*2 ease-in-out, opacity $time*2 ease-in-out
  border-radius 0 0 2*$radius 2*$radius

  .logIn
    width 100%

    p, a
      display inline

  h1
    text-transform uppercase
    margin-bottom 30px

  .action
    textButton()
    color white

  a
    textButton()
    background white
    text-decoration none
    border 1px solid $buttonBlue

.logIn, .loggedIn
  float right
  margin 15px

.loggedIn
  a
    textButton()
    background transparent
    color $blue

    &:hover
      background lighten($buttonBlue,90%)
    &:visited
      background transparent

.logIn
  p
    padding 9px
    margin 0

  a
    textButton()
    background transparent
    color black
    border 1px solid rgba(71,153,252,1)

    &.signInButton
      color white
      background $buttonBlue
      border 1px solid rgba(71,153,252,0.1)

    &:visited
      background transparent

.dashboard
  float left
  width 100%

  .newBook
    position fixed
    z-index 2
    bottom .5em
    left 50%
    margin-left -30px
    materialButton()

  .indexContent
    display table
    position relative
    z-index 1
    width 55%
    max-width 600px
    min-width 450px
    margin 0 auto 0

    .controlPannel
      background #ADBCCA
      height 60px
      border-radius 2*$radius 2*$radius 0 0

      button, a
        border none
        background #ADBCCA
        transition background $time ease-in-out
        color white
        padding 15px
        float left
        font-size 1em
        font-weight 100
        position relative

      button
        cursor initial
        &:first-of-type
          float left
          z-index 2

        &:last-of-type
          float right
          z-index 2

        img
          float left
          height 30px
          width 30px
          opacity .3

      a
        position absolute
        z-index 1
        text-align center
        width 100%
        display table
        padding 21px 20px 20px 20px
        text-decoration none

        &:hover
          background lighten(#ADBCCA,10%)