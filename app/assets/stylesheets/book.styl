.book
  width 100%
  max-width 600px
  min-width 450px
  margin-bottom 115px
  box-shadow 0 2px 2px rgba(0,0,0,0.2)
  display table
  margin 20px auto 0

  *
    font-weight 100

  fieldset
    border none

  .info, .cardinality, img.banner
    display inline-block
    width 100%
    float left

  .info, img.banner
    background #fff

  .bannerWrapper
    height 400px
    overflow hidden
    width 100%
    position relative
    background-size cover
    background-position center

  .info
    position relative
    padding 0 30px 0 35px

    .wrapper
      width 100%
      margin auto
      position relative
      display table

      .menu
        top 20px
        right -20px

      section
        button
          border none
          padding 8px
          margin 7px
          position relative
          cursor pointer
          background transparent
          border-radius 100%
          outline none

          &:hover
            .buttonBackground
              height 45px
              width 45px
              margin -4px -4.6px

          &:active
            padding 9px 8px 7px

            img.star
              float left

          &.favorite
            float left

          &.deleteBook
            float right

          span.buttonBackground
            height 0px
            width 0px
            display block
            display none
            position absolute
            z-index 0
            background #f7f7f7
            margin 29.5px
            border-radius 100%
            box-shadow inset 0 1px 1px rgba(0,0,0,0.1)
            transition all $time ease-in-out

      h1
        float left
        max-width 415px
        width 100%
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

      h3
        line-height 2.4em
        margin-bottom 0
        float right

      .description,
      .author
        float left

      .description
        width 100%
        min-height 44px
        margin 2em 0
        padding 2px 2px 4px

      a.author, p.author
        clear both
        padding 8px 11px
        margin -8px -11px
        font-size 12px
        color #aaa
        text-decoration none
        border-radius $radius

      a.author:hover
        background $buttonBlue
        color white